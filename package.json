{
  "name": "monitor-system",
  "version": "1.0.0",
  "description": "前端监控系统 - 包含服务端、管理后台和多平台SDK",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "node start.js",
    "dev": "node start.js dev",
    "dev:simple": "node start-dev-env.js",
    "dev:bash": "./start-dev-env.sh",
    "server": "node start.js server",
    "admin": "node start.js admin",
    "build": "node start.js build",
    "test": "node start.js test",
    "deps:install": "node package-manager.js install",
    "deps:update": "node package-manager.js update",
    "deps:clean": "node package-manager.js clean",
    "deps:build": "node package-manager.js build",
    "deps:status": "node package-manager.js status",
    "test:format": "node test-data-format.js",
    "test:network": "node test-network-errors.js",
    "test:integration": "node test-integration.js",
    "test:errors": "node test-errors.js",
    "test:sdk": "node test-sdk-connection.js",
    "test:admin": "node test-admin-only.js",
    "prepare-release": "node prepare-release.js",
    "server:dev": "cd server && npm run start:dev",
    "admin:dev": "cd admin && npm run dev",
    "admin:build": "cd admin && npm run build",
    "sdk:build": "cd sdk && npm run build",
    "sdk:build:web": "cd sdk && npm run build:web",
    "sdk:build:taro": "cd sdk && npm run build:taro",
    "sdk:build:core": "cd sdk && npm run build:core",
    "sdk:dev": "cd sdk && npm run dev",
    "sdk:dev:web": "cd sdk && npm run dev:web",
    "sdk:dev:taro": "cd sdk && npm run dev:taro",
    "sdk:dev:core": "cd sdk && npm run dev:core",
    "sdk:test": "cd sdk && npm run test",
    "sdk:clean": "cd sdk && npm run clean",
    "sdk:size": "cd sdk && npm run size",
    "sdk:analyze": "cd sdk && npm run analyze",
    "sdk:manager": "node sdk-manager.js",
    "sdk:status": "node sdk-manager.js status",
    "sdk:taro:build": "cd sdk/taroWechatMini && npm run build",
    "sdk:web:build": "cd sdk/web && npm run build",
    "sdk:core:build": "cd sdk/core && npm run build",
    "sdk:web-core:build": "cd sdk/web-core && npm run build",
    "sdk:taro-core:build": "cd sdk/taro-core && npm run build",
    "sdk:core:all": "npm run sdk:core:build && npm run sdk:web-core:build && npm run sdk:taro-core:build",
    "test:core": "node test-core-architecture.js",
    "migrate:core": "node migrate-to-core.js",
    "build:core": "node build-core-architecture.js build",
    "clean:core": "node build-core-architecture.js clean",
    "precommit": "./pre-commit.sh",
    "commit": "git add . && npm run precommit && git commit",
    "push": "git push origin main",
    "release": "npm run build && npm run test && git tag -a v$(node -p \"require('./package.json').version\") -m \"Release version $(node -p \"require('./package.json').version\")\" && git push --tags"
  },
  "workspaces": [
    "server",
    "admin",
    "sdk/taroWechatMini",
    "sdk/web",
    "example"
  ],
  "keywords": [
    "monitor",
    "frontend-monitoring",
    "error-tracking",
    "performance-monitoring",
    "taro",
    "wechat-mini-program",
    "web-sdk"
  ],
  "author": "Monitor Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/monitor-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/monitor-system/issues"
  },
  "homepage": "https://github.com/your-org/monitor-system#readme",
  "devDependencies": {},
  "directories": {
    "server": "server",
    "admin": "admin",
    "sdk": "sdk",
    "example": "example",
    "docs": "docs"
  },
  "config": {
    "server": {
      "port": 3001,
      "host": "localhost"
    },
    "admin": {
      "port": 5173,
      "host": "localhost"
    }
  }
}
