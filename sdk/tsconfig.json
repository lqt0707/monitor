{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["./core/*"],
      "@adapters/*": ["./adapters/*"],
      "@utils/*": ["./core/utils/*"]
    }
  },
  "include": ["core/**/*", "adapters/**/*", "web-core/**/*", "taro-core/**/*"],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "**/node_modules/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
