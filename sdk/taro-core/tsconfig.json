{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "../",
    "paths": {
      "@core/*": ["./core/*"],
      "@adapters/*": ["./adapters/*"]
    },
    "types": [],
    "typeRoots": ["./"]
  },
  "include": [
    "./**/*",
    "../core/**/*",
    "../adapters/taro-mini/**/*",
    "./types.d.ts"
  ],
  "exclude": ["node_modules", "dist", "../adapters/web/**/*"]
}
