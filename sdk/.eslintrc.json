{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "*.d.ts",
    "build/",
    ".build-cache/",
    "rollup.config.*.js",
    "*.config.js",
    "*.config.cjs",
    "scripts/**/*.js",
    "scripts/**/*.cjs",
    "bin/**/*.js",
    "bin/**/*.cjs",
    "**/*.ts",
    "**/*.tsx"
  ],
  "overrides": [
    {
      "files": ["**/*.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
