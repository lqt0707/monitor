{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "../",
    "paths": {
      "@core/*": ["./core/*"],
      "@adapters/*": ["./adapters/*"]
    }
  },
  "include": ["./**/*", "../core/**/*", "../adapters/**/*"],
  "exclude": ["node_modules", "dist"]
}
